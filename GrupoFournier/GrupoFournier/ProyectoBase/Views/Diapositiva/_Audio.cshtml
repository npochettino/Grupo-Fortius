@model Entities.DiapositivaVM

<div class="input-group">
    @Html.Label("Cargar Audio", htmlAttributes: new { @class = "control-label" })
</div>
<div class="input-group" style="margin-bottom:10px">
    <input type="file" name="@ViewData["idAudio"]" id="@ViewData["idAudio"]" class="form-control" accept=".mp3" />
    @Html.ValidationMessage("Audio", new { @class = "text-danger" })
</div>
<div class="input-group">
    <a onclick="Play('@Model.Diapositiva.EntityID', '@ViewData["posicion"]', '@ViewData["idAudio"]')" class="btn btn-info btn-sm" style="margin-right:10px"><i class="fa fa-play fa-fw"></i></a>
    <a onclick="StopLectura()" class="btn btn-danger btn-sm"><i class="fa fa-stop fa-fw"></i></a>
</div>